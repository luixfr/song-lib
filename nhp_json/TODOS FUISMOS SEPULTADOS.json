{
  "titles": ["TODOS FUISMOS SEPULTADOS"],
  "autors": ["Autor desconocido"],
  "languages": ["spanish"],
  "songbooks": [{ "name": "Nuestos Himnos Predilectos", "number": "71" }],
  "lyrics": [
    {
      "language": "spanish",
      "order": ["v1", "c1", "v2", "c1", "v3", "c1", "v4", "c1"],
      "v1": [
        "Todos fuimos sepultados",
        "como aquel siervo Naamán,",
        "sepultada nuestra lepra",
        "en las aguas del Jordán."
      ],
      "c1": [
        "Y sepultados juntamente,",
        "en el bautismo de Cristo Jesús;",
        "en esperanza de su muerte,",
        "porque Él es nuestra vida y nuestra luz."
      ],
      "v2": [
        "\"En la mar y en la nube\"",
        "vemos en Corintios diez",
        "\"Todos fueron bautizados",
        "juntamente con Moisés\"."
      ],
      "v3": [
        "Y San Pedro nos recuerda,",
        "que guardada por la fe,",
        "fue salvada por las aguas",
        "la familia de Noé."
      ],
      "v4": [
        "Bienvenido seas hermano,",
        "bienvenido con amor;",
        "por haberte sumergido",
        "como manda el Salvador."
      ]
    }
  ],
  "versions": []
}
