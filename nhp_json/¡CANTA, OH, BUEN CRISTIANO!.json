{
  "titles": ["¡CANTA, OH, BUEN CRISTIANO!"],
  "authors": ["Autor desconocido"],
  "languages": ["spanish"],
  "songbooks": [{ "name": "Nuestos Himnos Predilectos", "number": "11" }],
  "lyrics": [
    {
      "language": "spanish",
      "order": ["v1", "v2", "v3"],
      "v1": [
        "¡Canta, oh, buen cristiano!",
        "Dulce será el cantar;",
        "haz el camino llano,",
        "libra el pesar.",
        "Canta en las noches tristes,",
        "Canta en el sol y en luz;",
        "El mal así resistes,",
        "canta de Jesús."
      ],
      "v2": [
        "¡Canta, oh, buen cristiano",
        "Templa tu corazón;",
        "alza a tu Soberano",
        "tu feliz canción.",
        "Siempre está lleno el mundo",
        "de endechas y dolor;",
        "canta el amor profundo",
        "de tu Salvador ."
      ],
      "v3": [
        "¡Canta, oh, buen cristiano!",
        "Dios tu socorro es;",
        "Él sostendrá tu mano",
        "hasta la vejez.",
        "¿Sabes que al diablo invitas",
        "cuando medroso estás?",
        "Dios quitará tus cuitas,",
        "si cantando vas."
      ]
    }
  ],
  "versions": []
}
